                        BorderColor="#E5007D" BorderWidth="1" CornerRadius="40"
                        x:Name="btnadminproductospapeleria" Clicked="btnadminproductospapeleria_Clicked"/>
                <Image Source="papeleria.png" Grid.Row="2" Grid.Column="0"/>
                <Label Text="PAPELERIA" Grid.Row="3" Grid.Column="0" FontSize = "25" FontAttributes="Bold"
                       HorizontalTextAlignment="Center" />

                <Button BackgroundColor="#FED5E1" Grid.Row="2" Grid.RowSpan="2" Grid.Column="1"
                         BorderColor="#E5007D" BorderWidth="1" CornerRadius="40"  ImageSource="ropa.png"
                        x:Name="btnadminropa" Clicked="btnadminbtnadminropa_Clicked"/>
