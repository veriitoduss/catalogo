                <Label Text="NAVIDAD" Grid.Row="5" Grid.Column="1" FontSize = "25" FontAttributes="Bold"
                       HorizontalTextAlignment="Center"/>
                
                <Button x:Name="btnagregar" Clicked="btnagregar_Clicked" BorderColor="#E5007D" BorderWidth="1"
                        BackgroundColor="#FED5E1" CornerRadius="30" FontSize = "30"
                        Text="AGREGAR PRODUCTOS" Grid.Row="6" Grid.ColumnSpan="2"
                        HorizontalOptions="Center" VerticalOptions="Center"/>

                <BoxView BackgroundColor="Transparent" Grid.Row="7" Grid.ColumnSpan="2"/>
            </Grid>

        </ScrollView>
    </ContentPage.Content>
</ContentPage>