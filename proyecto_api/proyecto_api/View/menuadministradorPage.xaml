                       FontSize = "25" FontAttributes="Bold"  HorizontalTextAlignment="Center"
                       Grid.Row="0" Grid.ColumnSpan="2"/>

                <Button BackgroundColor="#FED5E1" Grid.Row="1" Grid.Column="0"
                            BorderColor="#E5007D" BorderWidth="1" CornerRadius="40"
                            ImageSource="hogar.png" x:Name="btnadminhogar"
                            Clicked="btnadminhogar_Clicked" />
                <Label Text="H" Grid.Row="1" Grid.Column="0" TranslationY="2" TranslationX="210"
                       FontSize = "25" FontAttributes="Bold"/>
                <Label Text="O" Grid.Row="1" Grid.Column="0" TranslationY="25" TranslationX="210"
                       FontSize = "25" FontAttributes="Bold"/>
                <Label Text="G" Grid.Row="1" Grid.Column="0" TranslationY="48" TranslationX="210"
                       FontSize = "25" FontAttributes="Bold"/>
                <Label Text="A" Grid.Row="1" Grid.Column="0" TranslationY="70" TranslationX="210"
                       FontSize = "25" FontAttributes="Bold"/>
                <Label Text="R" Grid.Row="1" Grid.Column="0" TranslationY="93" TranslationX="210"
                       FontSize = "25" FontAttributes="Bold" />

                <Button BackgroundColor="#FED5E1" Grid.Row="1" Grid.Column="1"
                         BorderColor="#E5007D" BorderWidth="1" CornerRadius="40"
                        ImageSource="bebe.png" x:Name="btnadminproductosbebe"
                       Clicked="btnadminproductosbebe_Clicked"/>
                <Label Text="B" Grid.Row="1" Grid.Column="1" TranslationY="15" TranslationX="195"
                       FontSize = "25" FontAttributes="Bold"/>
                <Label Text="E" Grid.Row="1" Grid.Column="1" TranslationY="38" TranslationX="195"
                       FontSize = "25" FontAttributes="Bold"/>
                <Label Text="B" Grid.Row="1" Grid.Column="1" TranslationY="61" TranslationX="195"
