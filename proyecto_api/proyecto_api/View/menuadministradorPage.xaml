                       FontSize = "25" FontAttributes="Bold"/>
                <Label Text="A" Grid.Row="2" Grid.Column="1" TranslationY="99" TranslationX="210"
                       FontSize = "25" FontAttributes="Bold"/>

                <Button BackgroundColor="#FED5E1" Grid.Row="4" Grid.RowSpan="2" Grid.Column="0"
                        BorderColor="#E5007D" BorderWidth="1" CornerRadius="40"
                        x:Name="btnadmincosmeticos" Clicked="btnadmincosmeticos_Clicked"/>
